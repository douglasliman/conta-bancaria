package conta.model;

public class ContaCorrente extends Conta {

	private float limite;

	public ContaCorrente(int numero, int agencia, int tipo, String titular, float saldo, float limite) {
		super(numero, agencia, tipo, titular, saldo);
		// TODO Auto-generated constructor stub
		this.limite = limite;
	}

	public float getLimite() {
		return limite;
	}

	public void setLimite(float limite) {
		this.limite = limite;
	}

	@Override
	public boolean sacar(float valor) {
		if (this.getSaldo() + this.getLimite() < valor) {
			System.out.println("\nSaldo insuficiente");
			return false;
		}
		this.setSaldo(this.getSaldo() - valor);
		System.out.println("\nSaque efetuado");
		return true;
	}



	@Override
	public void depositar(float valor) {
		if(valor > 0) {
			float newSaldo = this.getSaldo() + valor;
			System.out.println("Saldo efetuado com sucesso");
			System.out.println("Seu novo Saldo Ã©: "+ newSaldo);
		}else {
		System.out.println("Impossivel depositar valores menores ou iguais a 0");
		}
		
	}

	

}